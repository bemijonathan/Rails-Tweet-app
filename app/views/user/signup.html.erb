

<div class="container">
<%= form_tag("user/new") do %>
<form>
<div class="field">
  <div class="control">
    <input class="input is-primary" type="text" placeholder="name" name="name">
  </div>
</div>
<div class="field">
  <div class="control">
    <input class="input is-info" type="text" placeholder="email" name="email">
  </div>
</div>
<div class="field">
  <div class="control">
    <input class="input is-info" type="password" name="password">
  </div>
</div>
<button> Submit </button>
</form>
<% end %>
</div>